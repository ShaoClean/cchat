{
  "name": "cchat",
  "version": "1.0.0",
  "description": "微信风格的聊天应用 - 前后端分离项目",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend start:dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start:prod\"",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}